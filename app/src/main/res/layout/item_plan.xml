<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonplan"
            android:layout_width="0dp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/square_btn"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:text="@string/get_plan"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textViewIntro"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFree" />

        <TextView
            android:id="@+id/textViewIntro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorDark"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:text="@string/intro"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1" />

        <TextView
            android:id="@+id/textViewprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$66.6"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_8ssp"
            app:layout_constraintEnd_toEndOf="@+id/textViewIntro"
            app:layout_constraintStart_toStartOf="@+id/textViewIntro"
            app:layout_constraintTop_toBottomOf="@+id/textViewActive" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:text="per month"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="@+id/textViewprice"
            app:layout_constraintStart_toStartOf="@+id/textViewprice"
            app:layout_constraintTop_toBottomOf="@+id/textViewprice" />

        <TextView
            android:id="@+id/textViewcredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="15"
            android:textColor="@color/black"
            android:textSize="@dimen/_22sdp"
            app:layout_constraintEnd_toStartOf="@+id/textView36"
            app:layout_constraintStart_toStartOf="@+id/textView34"
            app:layout_constraintTop_toBottomOf="@+id/textView34" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:text="credits"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewcredit"
            app:layout_constraintEnd_toEndOf="@+id/textView34"
            app:layout_constraintStart_toEndOf="@+id/textViewcredit"
            app:layout_constraintTop_toTopOf="@+id/textViewcredit"
            app:layout_constraintVertical_bias="0.75" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:text="I need Dorpee Workspaces for a few hours each week"
            android:textAlignment="center"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintBottom_toTopOf="@+id/textViewFree"
            app:layout_constraintEnd_toEndOf="@+id/textViewIntro"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewIntro"
            app:layout_constraintTop_toBottomOf="@+id/textViewcredit" />

        <TextView
            android:id="@+id/textViewFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="@string/include_free_space_access"
            android:textColor="@color/blue"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toTopOf="@+id/buttonplan"
            app:layout_constraintEnd_toEndOf="@+id/textViewDescription"
            app:layout_constraintStart_toStartOf="@+id/textViewDescription"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textViewActive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorDark"
            android:text="@string/my_active_plan"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_minus2sdp"
            android:padding="@dimen/_4sdp"
            android:textSize="@dimen/_9ssp"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewIntro"
            app:layout_constraintTop_toBottomOf="@+id/textViewIntro" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>


